---
layout: base.njk
title: Blog
permalink: /blog/
eleventyExcludeFromCollections: true
---

<section class="blog-hero">
  <div class="blog-hero__container">
    <div class="blog-hero__content">
      <div class="blog-hero__text">
        <h1 class="blog-hero__title">BLOG</h1>
        <p class="blog-hero__subtitle">Updates, insights, and stories from the codeGROOVE team.</p>
      </div>
      <div class="blog-hero__image">
        <img src="/assets/blog-goose.png" alt="Blog">
      </div>
    </div>
  </div>
</section>

<section class="blog-content">
  <div class="blog-content__container">
    <div class="blog-content__posts">
      {%- for post in collections.post | reverse -%}
        <article class="blog-post-card">
          <div class="blog-post-card__meta">
            <time class="blog-post-card__date">{{ post.date }}</time>
            {% if post.data.author %}
              <span class="blog-post-card__author">by {{ post.data.author }}</span>
            {% endif %}
          </div>
          <h2 class="blog-post-card__title">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          </h2>
          {% if post.data.excerpt %}
            <p class="blog-post-card__excerpt">{{ post.data.excerpt }}</p>
          {% endif %}
          <a href="{{ post.url }}" class="blog-post-card__link">Read more â†’</a>
        </article>
      {%- endfor -%}
    </div>

    <aside class="blog-sidebar">
      <div class="blog-sidebar__card">
        <h3 class="blog-sidebar__title">Subscribe via RSS</h3>
        <p class="blog-sidebar__text">Get updates delivered to your feed reader.</p>
        <a href="/blog/feed.xml" class="blog-sidebar__link">
          <i class="ri-rss-fill"></i> RSS Feed
        </a>
      </div>
    </aside>
  </div>
</section>
